# {{ ansible_managed }}
#

# Identit√§t
set from = "{{ mutt_from }}"
set my_user = {{ mutt_from }}
set realname = "{{ mutt_realname }}"

# Farben
source ~/.mutt/mutt-colors-solarized-dark-256.muttrc

# Mailserver
set folder = imap://{{ mutt_imap_host }}
set smtp_url = smtp://{{ mutt_smtp_host }}

# SMTP options
set smtp_authenticators = 'plain'

# IMAP options
set delete = yes
set imap_check_subscribed
set imap_check_subscribed = yes
set imap_idle = yes
set imap_keepalive = 300
set imap_list_subscribed = yes
set imap_peek = yes
set imap_servernoise = no
unset imap_passive

# Special-Use Mailboxes
set spoolfile = +INBOX
mailboxes = +INBOX
set postponed = +Drafts
set record = +Sent

# Local caching
set header_cache = '~/.mutt/cache/'
set tmpdir = '~/.mutt/tmp/'
set message_cachedir = '~/.mutt/messages/'
# set message_cachedir = '~/.mutt/cache/bodies'
set message_cache_clean = yes

# Sortierung
set sort = threads
set sort_aux = date-received
set status_on_top = yes
set use_8bitmime = yes
set user_agent = no
set beep_new = yes

# Header Options
set edit_headers = yes
ignore *
unignore from to cc subject resent-from reply-to date X-Spam-Status Authentication-Results X-Spam-Score Posteo-DKIM
hdr_order Resent-from: Reply-to: X-Spam-Status: Authentication-Results: From: To: Cc: Date: Subject: Posteo-DKIM:

# General Options
alternative_order text/plain text/enriched text/html
set abort_nosubject = no
set abort_unmodified = no
set attribution = "* %n <%A>:"
set bounce_delivered = no
set collapse_unread = no
set confirmappend = no
set crypt_use_gpgme = no
set delete = yes
set dsn_notify = "failure,delay"
set dsn_return = hdrs
set fast_reply = yes
set include = yes
set mail_check = 60
set mark_old = yes
set markers = no
set metoo = no
set mime_forward = ask-yes
set move = no
set rfc2047_parameters = yes
set smart_wrap
set ssl_force_tls = yes
set strict_threads = yes
set uncollapse_jump = yes
set use_from = yes
set xterm_set_titles = yes
set xterm_title = "%f [Msgs:%?M?%M/?%m%?n? neu:%n?%?o? alt:%o?%?d? gel:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?%?l? %l?]"


#
set use_envelope_from = yes
set envelope_from_address= "{{ mutt_envelope_from_address }}"

# SSL / TLS
set ssl_starttls = yes
set ssl_force_tls = yes

